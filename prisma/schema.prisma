generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Adidas {
  id                 String   @id @map("_id") @db.ObjectId
  mainImage          String   @map("main_image")
  primaryCardImage String   @map("primary_card_image")
  secondaryCardImage String?  @map("secondary_card_image")
  secondariesImages  String[] @map("secondaries_images")
  title              String
  price              String
}

